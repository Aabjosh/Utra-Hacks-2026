// Motor A
int IN1 = 8;
int IN2 = 9;
int ENA = 10;

// Motor B
int IN3 = 6;
int IN4 = 7;
int ENB = 5;

void setup() {
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
}

void loop() {
  // Both motors forward
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
  analogWrite(ENA, 200);
  analogWrite(ENB, 200);
  delay(3000);

  // Stop
  analogWrite(ENA, 0);
  analogWrite(ENB, 0);
  delay(2000);
}
